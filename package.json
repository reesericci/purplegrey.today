{
  "version": "1.0.0",
  "description": "Simple PWA to tell you what day is it?",
  "name": "purplegrey",
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build"
  },
  "pwaManifest": {
    "name": "purplegrey.today",
    "shortName": "purplegrey",
    "startURL": "./index.html",
    "theme": "#A449FF",
    "generateIconOptions": {
      "baseIcon": "./logo.png",
      "sizes": [
        128,
        192,
        384,
        512,
        1024
      ],
      "genFavicons": true,
      "appleTouchIconBG": "#FFFFFF"
    }
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.2.1",
    "@parcel/packager-xml": "^2.2.1",
    "@parcel/transformer-sass": "^2.2.0",
    "@parcel/transformer-webmanifest": "^2.2.1",
    "@types/alpinejs": "^3.7.0",
    "@types/jquery": "^3.5.13",
    "@types/pickadate": "^3.5.32",
    "autoprefixer": "^10.4.2",
    "bower": "^1.8.13",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.5.0",
    "parcel": "^2.2.0",
    "postcss": "^8.4.5",
    "postcss-custom-properties": "^12.1.2",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.2.1",
    "postcss-url": "^10.1.3",
    "sass": "^1.48.0",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.14",
    "ts-loader": "^9.2.6",
    "tsc": "^2.0.3",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3",
    "workbox-webpack-plugin": "^6.4.2"
  },
  "dependencies": {
    "@parcel/service-worker": "^2.2.1",
    "@themesberg/tailwind-datepicker": "^1.1.0",
    "alpinejs": "^3.8.1",
    "axios": "^0.25.0",
    "graphql-request": "^3.7.0",
    "jquery": "^3.6.0",
    "lit": "^2.1.1",
    "parcel-config-pwa-manifest": "^0.1.0",
    "pickadate": "^5.0.0-alpha.3",
    "postcss-cli": "^9.1.0",
    "tiny-date-picker": "^4.0.0-beta6",
    "vanillajs-datepicker": "^1.2.0"
  }
}
